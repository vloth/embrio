{
  "name": "web-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "run-p 'db:migrate up' start 'db:build -w'",
    "start": "dotenv -- tsnd --rs false --no-notify src/index.ts | pino-pretty",
    "start:prod": "node src",
    "build": "tsc",
    "build:clean": "find src test -type f -name '*.js' -exec rm {} \\;",
    "db:build": "dotenv -- pgtyped -c pgconfig.json",
    "db:migrate": "dotenv -- db-migrate",
    "lint": "eslint",
    "test": "mocha -r ts-node/register --recursive 'src/**/*.test.ts'",
    "test:only": "mocha -r ts-node/register/transpile-only --watch --reporter min",
    "test:watch": "yarn test:only --recursive 'src/**/*.test.ts'",
    "test:cover": "nyc yarn test",
    "test:cover:open": "open coverage/lcov-report/index.html"
  },
  "dependencies": {
    "fp-ts": "^2.6.5",
    "glob": "^7.1.6",
    "io-ts": "^2.2.5",
    "io-ts-reporters": "^1.1.0",
    "io-ts-types": "^0.5.7",
    "koa": "^2.12.1",
    "koa-respond": "^2.1.0",
    "koa-router": "^9.0.1",
    "module-alias": "^2.2.2",
    "pg": "^8.2.1",
    "pino": "^6.3.2",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@pgtyped/cli": "^0.8.0",
    "@pgtyped/query": "^0.7.3",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/faker": "^4.1.12",
    "@types/glob": "^7.1.2",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/mocha": "^7.0.2",
    "@types/pg": "^7.14.3",
    "@types/pino": "^6.3.0",
    "@types/ramda": "^0.27.6",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "db-migrate": "^0.11.11",
    "db-migrate-pg": "^1.2.2",
    "dotenv-cli": "^3.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "factory.ts": "^0.5.1",
    "faker": "^4.1.0",
    "koa-bodyparser": "^4.3.0",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pino-pretty": "^4.0.0",
    "prettier": "^2.0.5",
    "source-map-support": "^0.5.19",
    "testdouble": "^3.16.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.47",
    "typescript": "^3.9.5"
  },
  "_moduleAliases": {
    "@adapter": "./src/adapter/",
    "@protocol": "./src/protocol/",
    "@test": "./test/helper"
  }
}
