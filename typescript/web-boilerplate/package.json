{
  "name": "web-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "env $(cat .env| grep -v \"#\" | xargs) tsnd --rs false --clear --no-notify src/index.ts | pino-pretty",
    "start:prod": "node src",
    "ts": "tsc",
    "ts:clean": "find src -type f -name '*.js' -exec rm {} \\;",
    "db:build": "pgtyped -c pgconfig.json",
    "db:migrate": "node migrations/setup/ensure-db && db-migrate",
    "lint": "eslint",
    "test": "mocha -r ts-node/register src/**/*.test.ts",
    "test:watch": "yarn test --watch --reporter min"
  },
  "dependencies": {
    "@types/ramda": "^0.27.6",
    "fp-ts": "^2.6.5",
    "glob": "^7.1.6",
    "io-ts": "^2.2.5",
    "io-ts-reporters": "^1.1.0",
    "io-ts-types": "^0.5.7",
    "koa": "^2.12.1",
    "koa-respond": "^2.1.0",
    "koa-router": "^9.0.1",
    "module-alias": "^2.2.2",
    "mongodb": "^3.5.9",
    "pg": "^8.2.1",
    "pino": "^6.3.2",
    "rambda": "^5.8.0",
    "ramda": "^0.27.0"
  },
  "devDependencies": {
    "@pgtyped/cli": "^0.8.0",
    "@pgtyped/query": "^0.7.3",
    "@types/chai": "^4.2.11",
    "@types/glob": "^7.1.2",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/mocha": "^7.0.2",
    "@types/mongodb": "^3.5.24",
    "@types/pg": "^7.14.3",
    "@types/pino": "^6.3.0",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "chai": "^4.2.0",
    "db-migrate": "^0.11.11",
    "db-migrate-pg": "^1.2.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "koa-bodyparser": "^4.3.0",
    "mocha": "^8.0.1",
    "pino-pretty": "^4.0.0",
    "prettier": "^2.0.5",
    "testdouble": "^3.16.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.47",
    "typescript": "^3.9.5"
  },
  "_moduleAliases": {
    "@adapter": "./src/adapter/",
    "@protocol": "./src/protocol/",
    "@test": "./test/helper"
  }
}
