{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2020",
    "module": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020", "WebWorker"],
    "types": [
      "@types/webpack-env",
      "@emotion/react/types/css-prop"
    ],
    "jsx": "preserve"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    ".cache/**/*",
    ".yarn/**/*",
    "*/.next/**/*",
    "dist/**/*"
  ]
}
